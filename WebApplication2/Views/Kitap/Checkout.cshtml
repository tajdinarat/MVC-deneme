
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form class="form-group" method="post">
    <div>
        <label for="kisiadi">Kişi Adı:</label><br>
        <input type="text" class="form-control" id="kisiadi" name="kisiAd" value="" required><br>
    </div>
    <div>
        <label for="telno">Telefon Numarası:</label><br>
        <input type="tel" class="form-control" id="telno" name="kisiTelefon" pattern="[0-9]{3}-[0-9]{3} [0-9]{4}" placeholder="555-123 4567" maxlength="12" required><br><br>
    </div>
    <div>
        <label for="tcno">TC Numarası:</label><br>
        <input type="text" class="form-control" id="tcno" maxlength="11" name="kisiTC"><br><br>
    </div>
    <div style="margin-top:10px">
        <input type="submit" value="Submit">
    </div>
</form>

